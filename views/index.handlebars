<div>
    <img src="../public/assets/pics/krabbyPatty.png" alt="Generic burger picture" >
</div>

<div>
    <div>
    {{#each burgers}}
      {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
      {{/if}}
    {{/each}}
    </div>
    <div>
      <ol>
        {{#each burgers}}
          {{#if devoured}}
            <li>{{this.burger_name}}</li>
          {{/if}}
        {{/each}}
      </ol>
    </div>
</div>

<h2>Eat a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <button type="submit">Add Burger</button>
</form>